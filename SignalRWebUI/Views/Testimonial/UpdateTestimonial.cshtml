@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans Yorum İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Referans Yorum Güncelleme</div>
						</div>
						<input type="hidden" asp-for="TestimonialID"/>
						<div class="card-body">
							<div class="form-group">
								<label for="name">Müşteri Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="Name" id="name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="title">Müşteri Ünvanını Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="imageurl">Müşteri Resim Dosya Yolunu Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="comment">Müşteri Yorumunu Giriniz</label>
								<input type="text" class="form-control" asp-for="Comment" id="comment">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-outline-primary btn-round">Yorumu Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

